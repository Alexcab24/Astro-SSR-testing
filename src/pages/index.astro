const API_KEY = 'fvMHm5i7hexZZHP3hdXLpasa6HhBNxPE'; // Inserta aqu√≠ tu clave de Giphy API

// Hacemos la solicitud GET a la API de Giphy
const response = await fetch(`https://api.giphy.com/v1/gifs/trending?api_key=${API_KEY}&limit=9`);
const { data: gifs } = await response.json();

---
<html lang="es">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GIFs de Giphy</title>
  </head>
  <body>
    <h1>GIFs Populares de Giphy</h1>

    <ul>
      {gifs.map(gif => (
        <li>
          <img src={gif.images.fixed_height.url} alt={gif.title} />
        </li>
      ))}
    </ul>
  </body>
</html>